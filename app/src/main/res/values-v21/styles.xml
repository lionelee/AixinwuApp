<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorBackground">@color/background</item>

        <item name="android:colorButtonNormal">?attr/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/darkgray</item>
    </style>

    <style name="BtnTheme" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/btn_textcolor</item>
    </style>

    <style name="PrimaryButton" parent="AppBaseTheme">
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

</resources>