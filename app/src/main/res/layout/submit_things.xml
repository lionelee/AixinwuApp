<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="24dp"
        android:text="@string/submit_head"
        android:textColor="#3e3a39"
        android:background="#eeefef"
        android:layout_marginBottom="3dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp">

        <FrameLayout
            android:id="@+id/aixinwuImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageAixinwu"
            android:src="@drawable/donate"
            android:padding="20dp"
            android:background="@drawable/gray_circle"
            android:visibility="gone"/>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageAixinwu1"
                android:src="@drawable/donate"
                android:padding="20dp"
                android:background="@drawable/donate_circle"
                android:visibility="visible"/>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 捐赠"
            android:textSize="15dp"
            android:textColor="#3e3a39"
            android:layout_gravity="center"
            android:layout_below="@id/aixinwuImage"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/personalImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageDeal"
            android:src="@drawable/usedicon"
            android:padding="20dp"
            android:background="@drawable/gray_circle"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageDeal1"
            android:src="@drawable/usedicon"
            android:padding="20dp"
            android:background="@drawable/used_circle"
            android:visibility="visible"/>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易"
            android:textSize="15dp"
            android:textColor="#3e3a39"
            android:layout_gravity="center"
            android:layout_below="@id/personalImage"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="#eeefef">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="请选择发布位置"
            android:textSize="16sp"
            android:textColor="#3e3a39"/>
    </RelativeLayout>

</RelativeLayout>