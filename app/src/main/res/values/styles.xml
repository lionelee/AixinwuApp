<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="AppStartTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@drawable/startbg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>
    <style name="AppTheme.Aixinwu" parent="AppBaseTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
    </style>
    <style name="AppTheme.Aixinwu.TransBar" parent="AppBaseTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Seiee" parent="AppBaseTheme">
        <item name="colorPrimary">@color/SeieeBlue</item>
        <item name="colorPrimaryDark">@color/SeieeBlue</item>
    </style>
    <style name="AppTheme.Seiee.TransBar" parent="AppBaseTheme">
        <item name="colorPrimary">@color/SeieeBlue</item>
        <item name="colorPrimaryDark">@color/SeieeBlue</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.UltraViolet" parent="AppBaseTheme">
        <item name="colorPrimary">@color/UltraViolet</item>
        <item name="colorPrimaryDark">@color/UltraViolet</item>
    </style>
    <style name="AppTheme.UltraViolet.TransBar" parent="AppBaseTheme">
        <item name="colorPrimary">@color/UltraViolet</item>
        <item name="colorPrimaryDark">@color/UltraViolet</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.ChiliOil" parent="AppBaseTheme">
        <item name="colorPrimary">@color/ChiliOil</item>
        <item name="colorPrimaryDark">@color/ChiliOil</item>
    </style>
    <style name="AppTheme.ChiliOil.TransBar" parent="AppBaseTheme">
        <item name="colorPrimary">@color/ChiliOil</item>
        <item name="colorPrimaryDark">@color/ChiliOil</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.LittleBoyBlue" parent="AppBaseTheme">
        <item name="colorPrimary">@color/LittleBoyBlue</item>
        <item name="colorPrimaryDark">@color/LittleBoyBlue</item>
    </style>
    <style name="AppTheme.LittleBoyBlue.TransBar" parent="AppBaseTheme">
        <item name="colorPrimary">@color/LittleBoyBlue</item>
        <item name="colorPrimaryDark">@color/LittleBoyBlue</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Arcadia" parent="AppBaseTheme">
        <item name="colorPrimary">@color/Arcadia</item>
        <item name="colorPrimaryDark">@color/Arcadia</item>
    </style>
    <style name="AppTheme.Arcadia.TransBar" parent="AppBaseTheme">
        <item name="colorPrimary">@color/Arcadia</item>
        <item name="colorPrimaryDark">@color/Arcadia</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Emperador" parent="AppBaseTheme">
        <item name="colorPrimary">@color/Emperador</item>
        <item name="colorPrimaryDark">@color/Emperador</item>
    </style>
    <style name="AppTheme.Emperador.TransBar" parent="AppBaseTheme">
        <item name="colorPrimary">@color/Emperador</item>
        <item name="colorPrimaryDark">@color/Emperador</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BtnTheme" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="background">@drawable/button</item>
        <item name="android:textColor">@color/btn_textcolor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PrimaryButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BorderlessButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/borderless_btn</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="PopupWindowStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/top_to_bottom</item>
    </style>

    <style name="ItemDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

</resources>