<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_color_deep" >

<LinearLayout
    android:layout_width="200dp"
    android:layout_height="fill_parent"
    android:background="@color/bg_color_deep"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/head_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/head_default" />

        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/head_view"
            android:text="昵称"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/grade_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name_textview"
            android:layout_below="@+id/name_textview"
            android:text="用户名"
            android:textColor="@color/text_color"
            android:textSize="12sp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/before_login"
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:background="@color/bg_color_deep"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/login"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="登陆"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <include
            android:layout_width="fill_parent"
            android:layout_height="2px"
            layout="@layout/line" >
        </include>

        <TextView
            android:id="@+id/signup"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="注册"
            android:textColor="@color/text_color"
            android:textSize="15sp" />
    </LinearLayout>
    <!-- After Log in -->

    <LinearLayout
        android:id="@+id/after_login"
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:background="@color/bg_color_deep"
        android:orientation="vertical" >
