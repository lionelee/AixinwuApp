<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textSize="18sp"
        android:text="确认订单"
        android:textColor="@color/white"
        android:background="?attr/colorPrimary"/>

    <RelativeLayout
        android:id="@+id/receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/receiverName"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="收货人:"
            android:textSize="16sp"
            android:textColor="#595757"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/receiverName"
            android:layout_toEndOf="@id/receiverName"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textColor="#595757"/>
        <EditText
            android:id="@+id/editName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/receiverName"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="8dp"
            android:background="@drawable/text_background"
            android:inputType="text"
            android:textSize="16sp"
            android:textColor="#595757"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/receiverStuId"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/receiverName"
            android:text="学号:  "
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:textColor="#595757" />
        <TextView
            android:id="@+id/stuId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/receiverName"
            android:layout_toEndOf="@id/receiverStuId"
            android:layout_toRightOf="@id/receiverStuId"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textColor="#595757" />
        <EditText
            android:id="@+id/editStuId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/receiverName"
            android:layout_toEndOf="@id/receiverStuId"
            android:layout_toRightOf="@id/receiverStuId"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="8dp"
            android:background="@drawable/text_background"
            android:inputType="number"
            android:textSize="16sp"
            android:textColor="#595757"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/receiverPhone"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/receiverStuId"
            android:text="联系电话:"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textColor="#595757" />
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/receiverPhone"
            android:layout_toEndOf="@id/receiverPhone"
            android:layout_below="@id/receiverStuId"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textColor="#595757" />
        <EditText
            android:id="@+id/editPhone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/receiverPhone"
            android:layout_below="@+id/receiverStuId"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="8dp"
            android:background="@drawable/text_background"
            android:inputType="phone"
            android:textSize="16sp"
            android:textColor="#595757"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/editRelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/receiverPhone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:visibility="visible">
            <ImageView
                android:id="@+id/editInfo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_edit"/>
            <TextView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/editInfo"
                android:layout_marginLeft="4dp"
                android:layout_centerVertical="true"
                android:text="编辑"
                android:textSize="14sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/submitRelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/receiverPhone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:visibility="gone">
            <TextView
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:text="保存"
                android:textSize="14sp"
                android:textColor="?attr/colorAccent"/>
            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/submit"
                android:layout_toEndOf="@id/submit"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="取消"
                android:textSize="14sp"
                android:textColor="?attr/colorAccent"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/sep_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/receiver"
        android:background="@color/darkgray"/>
    <ListView
        android:id="@+id/commodityList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sep_line"
        android:layout_above="@+id/sep_line_bottom"
        android:scrollbars="none"
        android:dividerHeight="4dp"
        android:divider="@color/background"
        android:background="@color/background"/>
    <View
        android:id="@+id/sep_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/bottom"
        android:background="@color/darkgray"/>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">
        <TextView
            android:id="@+id/totalMoney"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="合计:￥0"
            android:gravity="right|center_vertical"
            android:padding="7dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/order"
            android:layout_width="100dp"
            android:background="?attr/colorAccent"
            android:layout_height="48dp"
            android:text="确认付款"
            android:textSize="16sp"
            android:textColor="@color/white"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>
    </LinearLayout>
</RelativeLayout>
